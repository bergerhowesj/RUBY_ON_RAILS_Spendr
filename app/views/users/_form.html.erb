<div class="info form">
  <%= form_for(@user) do |f| %>
    <%= f.label :username, class: "label"%>
    <%= f.text_field :username, class: 'input' %><br>

    <%= f.label :email, class: "label"%>
    <%= f.text_field :email, class: 'input' %><br>

    <%= f.label :first_name, class: "label"%>
    <%= f.text_field :first_name, class: 'input' %><br>

    <%= f.label :last_name, class: "label"%>
    <%= f.text_field :last_name, class: 'input' %><br>

    <%= f.label :state, class: "label"%>
    <%= f.text_field :address_state, class: 'input' %><br>

    <%= f.label :postcode, class: "label"%>
    <%= f.number_field :address_postcode, class: 'input' %><br>

    <%= f.label :password, class: "label"%>
    <%= f.password_field :password, class: 'input'  %><br>

    <%= f.label :Confirm_Password, class: "label"%>
    <%= f.password_field :password_confirmation, class: 'input'  %><br>
    <%= f.submit class: "submit" %>
  <% end %>
</div>
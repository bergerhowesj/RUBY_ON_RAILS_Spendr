
<%= form_for(item) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.number_field :price, value: number_to_currency(f.object.amount.to_f, delimiter: '', unit: ''), step: :any

  <%= f.text_field :store_name, list: "stores_autocomplete" %>
  <datalist id="stores_autocomplete">
    <% Store.all.each do |store| %>
      <option value="<%= store.name %>">
    <% end %>
  </datalist>

  <%= f.text_field :category_name, list: "categories_autocomplete" %>
  <datalist id="categories_autocomplete">
    <%Category.all.each do |category| %>
      <option value="<%= category.name %>">
    <% end %>
  </datalist>

  <br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>